<%= render 'shared/error_messages', resource: @newapplication %>

<%= form_for @newapplication, as: :newapplication, url: newapplication_step3_path do |f| %>

  <!--  error notification goes here-->

  <div class="button-wrapper">
    <div>
      <div>
        <h1>New Auto Replacement Cost Policy - Insured and vehicle details</h1>
        <br>
      </div>
      <div class="wrapper_1_1">
        <div>
          <h4>Insured's contact information</h4>
          <hr>

          <div style="display: grid; grid-template-columns: 3fr 7fr; grid-gap: 1em;">
            <%= f.label :insured_type, 'Insured type:' %>
            <%= f.select :insured_type, Customer::INSURED_TYPES, {}, {class: 'form-control'} %>

            <%= f.label :first_name, 'First name:', id: "first_name_label"%>
            <%= f.text_field :first_name, class: 'form-control' %>

            <%= f.label :last_name, 'Last name:', class: 'insured_last_name' %>
            <%= f.text_field :last_name, class: 'form-control insured_last_name' %>

            <%= f.label :address, 'Mailing address:' %>
            <%= f.text_field :address, class: 'form-control' %>

            <%= f.label :city, 'City/Province' %>
            <div class="wrapper" style="grid-template-columns: 3fr 1fr; grid-gap:1em;">
              <%= f.text_field :city, class: 'form-control' %>
              <%= f.select :province, ['BC'], {}, class: 'form-control' %>
            </div>

            <%= f.label :postal_code, 'Postal code:' %>
            <%= f.text_field :postal_code, class: 'form-control' %>

            <%= f.label :phone, 'Phone:' %>
            <%= f.text_field :phone, maxlength: 10, data: { numeric: true }, class: 'form-control' %>

            <%= f.label :email, 'Email:' %>
            <%= f.email_field :email, class: 'form-control' %>

          </div>

        </div>
        <div>
          <h4>Additional vehicle details</h4>
          <hr>

          <div class="form_div">

            <%= f.label :make, 'Make:' %>
            <div style="display: grid; grid-template-columns: 1fr 8fr;">
              <label for="make" style="margin-left: 0.1em;"><%= @newapplication.model_year || nil %></label>
              <% if @newapplication.dealer_category === TESLA %>
                <%= f.text_field :make, value: TESLA, class: 'form-control', disabled: true %>
              <% else %>
                <%= f.text_field :make, class: 'form-control', disabled: false %>
              <% end %>
            </div>

            <%= f.label :model, 'Model:' %>
            <%= f.text_field :model, class: 'form-control' %>

            <%= f.label :vin, 'VIN:' %>
            <%= f.text_field :vin, maxlength: 17, class: 'form-control'%>


            <%= f.label :reg_num, 'Reg #' %>
            <%= f.text_field :reg_num, maxlength: 8, data: { numeric: true }, class: 'form-control'%>

            <%= f.label :lessor_name, 'Lessor name:' %>
            <%= f.text_field :lessor_name, maxlength: 52, class: 'form-control' %>
          </div>

          <div style="padding: 10px;"></div>

          <h4>Co-insured's details (optional)</h4>
          <hr>

          <div class="form_div" style=" grid-template-columns: 1fr 3fr;">
            <%= f.label :co_insured_first_name, 'First name (optional):' %>
            <%= f.text_field :co_insured_first_name, maxlength: 255, class: 'form-control' %>

            <%= f.label :co_insured_last_name, 'Last name (optional):' %>
            <%= f.text_field :co_insured_last_name, maxlength: 255, class: 'form-control' %>
          </div>

        </div>

      </div>
    </div>

    <div class="wrapper_1_1">
      <div></div>
      <div class="row">
        <div class="col-md-4 btn-padding">
          <button type="submit" name="commit" value="<< Previous" class="btn btn-primary" style="width: 100%;">
            <i class="fas fa-chevron-circle-left"></i>
            Previous
          </button>
        </div>
        <div class="col-md-4 btn-padding">
          <button type="submit" name="commit" value="Next >>" class="btn btn-primary" style="width: 100%;">
            Next
            <i class="fas fa-chevron-circle-right"></i>
          </button>
        </div>
        <div class="col-md-4 btn-padding">
          <button type="submit" name="commit" value="Save" class="btn btn-secondary" data-confirm="Click 'OK' to confirm saving the application. This will direct you to the main page" style="width: 100%;">
            <i class="fas fa-save"></i>
            Save
          </button>
        </div>
      </div>
    </div>

    <div class="progress">
      <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">Step 3</div>
    </div>

  </div>

<% end %>

